package routines;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.sql.Date;
import java.util.Calendar;


public class GeneraTask {
	
	public static void main(String[] args){
		
		Connection con = null;
		Statement st = null;
		PreparedStatement statement;
		ResultSet rs = null;
		String url = "jdbc:postgresql://localhost/thepulisher";
		String user = "postgres";
		String password = "postgres";
		String query = "INSERT INTO task VALUES(?,?,?,?,?)";
		int last_id = Integer.valueOf(args[1]);
		Date sqlDate = new Date(Calendar.getInstance().getTime().getTime());
		
		try{
			con = DriverManager.getConnection(url, user, password);
			statement = con.prepareStatement(query);
			statement.setInt(2,last_id);
			statement.setString(3,"tast");
			statement.setDate(4, current_date);
			if(rs.next())
			{
				System.out.println(rs.getString(3));
			}
		}catch(SQLException ex){
			ex.printStackTrace();
		} finally {
			try{
				
				if(rs != null){
					rs.close();
